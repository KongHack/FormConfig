{% macro render(field) %}
    <textarea name="{{ field.name }}" class="form-control {{ field.class }}" style="height:{{ field.height|default('120px') }}" id="ck_{{ field.name }}" {{ field.getDataAttributeString() }}>{{ field.value }}</textarea>
    <script type="text/javascript">
        CKEDITOR.replace("ck_{{ field.name }}", {'toolbar':'Full'});
        nanospell.ckeditor('ck_{{ field.name }}',{server : "php"});
    </script>
{% endmacro %}