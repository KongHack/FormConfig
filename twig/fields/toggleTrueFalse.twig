{% macro render(field) %}
    <div>
        <div class="btn-group" id="{{ field.id }}" data-toggle="buttons">
            <label class="btn btn-default yes {{ (field.value==1 ? 'active' : '') }}">
                <input type="radio" name="{{ field.name }}" value="1" autocomplete="off" {{ (field.value==1 ? 'checked="checked"' : '') }} {{ field.getDataAttributeString() }}> Yes
            </label>
            <label class="btn btn-default no {{ (field.value==0 ? 'active' : '') }}">
                <input type="radio" name="{{ field.name }}" value="0" autocomplete="off" {{ (field.value==0 ? 'checked="checked"' : '') }}
                    {% if field.dataAttributes|length > 0 %}
                        {% for dk, dv in field.dataAttributes %}
                            data-{{ dk }}="{{ dv }}"
                        {% endfor %}
                    {% endif %}
                >  No
            </label>
        </div>
    </div>
{% endmacro %}