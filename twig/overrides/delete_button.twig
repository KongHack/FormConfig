{% set rand = random() %}
<input type="submit" class="btn btn-danger" id="override_delete_{{ rand }}" value="Delete">

<script type="text/javascript">
    $(function(){
        var $form = $("#override_delete_{{ rand }}").closest('form');
        $form.addClass('FC_BOUND');
        $form.on('submit.FCDEL',function(e){
            e.preventDefault();
            if(typeof bootbox !== undefined) {
                bootbox.confirm("Are you sure you want to delete?", function(result){
                    if(result) {
                        $form.unbind('submit.FCDEL');
                        $form.submit();
                    }
                })
            } else {
                var result = confirm("Are you sure you want to delete?");
                if(result) {
                    $form.unbind('submit.FCDEL');
                    $form.submit();
                }
            }
        });
    });
</script>
